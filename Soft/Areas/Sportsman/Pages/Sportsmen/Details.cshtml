@page
@using North.Aids
@using North.Data.Event
@using North.Data.SportsmanEvent
@using North.Pages.Extensions
@model North.Soft.Areas.Sportsman.Pages.Sportsmen.DetailsModel

@{
    Layout = "_Details";
    const string sportsmanEvent = "/SportsmanEvent/SportsmanEvents";
    var sportsmanEventId = GetMember.Name<SportsmanEventData>(x => x.SportsmanId);

    const string events = "/Event/Events";
    var organizationId = GetMember.Name<EventData>(x => x.OrganizationId);
}
    <body>
        @Html.DisplayControlsFor(model => model.Item.Id)
        @Html.DisplayControlsFor(model => model.Item.Name)
        @Html.DisplayControlsFor(model => model.Item.DateOfBirth)


    </body>

@section Details {
    @Html.HypertextLinkFor(string.Empty, new Link("Registreeri üritusele",
        $"{sportsmanEvent}/Create?FixedFilter={sportsmanEventId}&FixedValue={Model.Item.Id}"))
    @Html.HypertextLinkFor(string.Empty, new Link("Näita üritusi",
        $"{events}/Index?FixedFilter={organizationId}&FixedValue={Model.Item.Id}"))
}