@page
@using North.Pages.Extensions
@model North.Soft.Areas.Event.Pages.Events.IndexModel

@{
    Layout = "_Index";
    var page = Model.PageUrl;
}

@section Create{
    @Html.HypertextLinkFor(string.Empty, new Link(Constants.CreateNewLinkTitle, $"{page}/Create?fixedFilter={Model.FixedFilter}&fixedValue={Model.FixedValue}"))
}
<body>
    <table class="table">
        <thead>
            @Html.TableHeaderFor(
                new Link(Html.DisplayNameFor(m => m.Item.Name), Model.GetSortString(m => m.Name, page)),
                new Link(Html.DisplayNameFor(m => m.Item.EventDate), Model.GetSortString(m => m.EventDate, page)),
                new Link(Html.DisplayNameFor(m => m.Item.SportCategoryId), Model.GetSortString(m => m.SportCategoryId, page)),
                new Link(Html.DisplayNameFor(m => m.Item.TypeId), Model.GetSortString(m => m.TypeId, page)))
             </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    @Html.TableRowFor(
                        page,
                        item.Id,
                        Html.DisplayFor(modelItem => item.Name),
                        Html.DisplayFor(modelItem => item.EventDate),
                        Html.DisplayFor(modelItem => item.SportCategoryId),
                        Html.DisplayFor(modelItem => item.TypeId))
                        ))
                </tr>
            }
        </tbody>
    </table>
</body> 